{% extends 'layout.html.twig' %}
{% block content %}
    <div class="container-fluid">
        {% set total = 0 %}
        {% if (error) %}
            <div class="text-center alert alert-danger">{{ error }}</div>
        {% endif %}

        {% if (mensaje) %}
            <div class="text-center alert alert-success">{{ mensaje }}</div>
        {% endif %}
            <div class="row">
                {% for muestra in muestras %}
                    <div style="height: 285px; padding: 5px;" class="col-sm-2">
                        <div class="sombrear" style="box-shadow: 1px 1px 2px #888; border-radius: 15px; border: 1px solid rgba(125,125,125, 0.1); padding: 7px; margin-bottom: 15px">
                            <div class="row">
                                <div style=" max-height: 150px; min-height: 150px" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <img style="max-height: 150px;" class="img-responsive center-block" src="{{ asset('img/muestras/' ~ muestra.getMuestra.getImageName) }}">
                                </div>
                            </div>

                            <div>
                                <div>
                                    <h4>Precio: {{ muestra.getPrecio }}€</h4>
                                </div>
                                <div class="row">
                                    <div style="padding-top: 5px;" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                        <p><strong>Cantidad: {{ muestra.getCantidad }}</strong> unidades</p>
                                    </div>
                                </div>
                                <div style="margin-bottom: 10px;" class="row">
                                    <div style="padding-top: 5px;" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                        <p><strong>Total: {{ muestra.getCantidad*muestra.getPrecio }}</strong>€</p>
                                        {% set total = total + muestra.getCantidad*muestra.getPrecio %}
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        <div>
            <h3 class="text-center">El precio total de tu pedido es de <strong>{{ total }}€</strong></h3>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .sombrear:hover{
            background-color: #eeeeee;
        }
    </style>
{% endblock %}