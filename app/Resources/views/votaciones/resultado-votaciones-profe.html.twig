{% extends 'layout.html.twig' %}
{% block content %}
    <div class="container-fluid">

        <h1 class="text-center">Resultado Votaciones Profesores</h1>
        <h4 class="text-center">Grupo {{ grupo }}</h4>
        <br/>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                {% if (votaciones>0) %}
                <table class="table table-striped table-hover table-responsive tablesorter">
                    <thead>
                        <tr>
                            <th>Profesor</th>
                            <th style="width: 130px" class="text-center">Votos obtenidos</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for profesor in profesores %}
                            <tr>
                                <td>{{ profesor.getProfesor() }}</td>
                                <td class="text-center">{{ profesor.getProfesor().getNumeroVotos() }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {% else %}
                    <div class="jumbotron text-center alert alert-info">
                        <p>No existen profesores para este grupo!</p>
                    </div>
                {% endif %}
            </div>
        </div>

    </div>
    <br/>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $("table").tablesorter({
                sortList: [[1,1]]
            });
        });
    </script>
{% endblock %}

