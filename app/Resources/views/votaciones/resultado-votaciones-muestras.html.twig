{% extends 'layout.html.twig' %}
{% block content %}
    <div class="container-fluid">

        <h1 class="text-center">Resultado Votaciones Muestras</h1>
        <h4 class="text-center">Grupo {{ grupo }}</h4>
        <br/>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                {% if (votaciones>0) %}
                <table class="table table-striped table-hover table-responsive tablesorter">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Muestra</th>
                            <th style="width: 130px" class="text-center">Votos obtenidos</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for muestra in muestras %}
                            <tr>
                                <td style="padding-left: 10px">
                                    <a href="#"><img id="{{ muestra.getMuestraVotar().id }}" class="muestra" style="height: 40px;" src="{{ asset('img/muestras-votar/' ~ muestra.getMuestraVotar().getImageName) }}" title="nada" /></a>
                                </td>
                                <td>{{ muestra.getMuestraVotar() }}</td>
                                <td class="text-center">{{ muestra.getMuestraVotar().getNumeroVotos() }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {% else %}
                    <div class="jumbotron text-center alert alert-info">
                        <p>No existen muestras para este grupo!</p>
                    </div>
                {% endif %}
            </div>
        </div>

    </div>
    <br/>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $("table").tablesorter({
                sortList: [[2,1]]
            });
        });
    </script>
{% endblock %}

