{% trans_default_domain 'FOSUserBundle' %}
<div class="container-fluid">
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title text-center">ACCESO</h3>
            </div>
            <div class="panel-body">
                {% if error %}
                    <div class="text-center alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path("fos_user_security_check") }}" method="post" role="form">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <fieldset>
                        <div class="form-group">
                            <label for="username">Correo electrónico{# o {{ 'security.login.username'|trans }} #}</label>
                            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="ejemplo@gmail.com" required="required" autofocus />
                        </div>

                        <div class="form-group">
                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <input class="form-control" type="password" id="password" name="_password" placeholder="Contraseña" required="required" />
                        </div>

                        <div class="checkbox checkbox-primary">
                            <label for="remember_me"><input type="checkbox" id="remember_me" name="_remember_me" value="on" />{{ 'security.login.remember_me'|trans }}</label>
                        </div>

                        <button type="submit" class="btn btn-lg btn-success btn-block" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>

                    </fieldset>
                </form>
            </div>
            <div class="panel-body">
                <!-- div class="alert alert-danger"> #error.messageKey|trans(error.messageData, 'security') </div -->

                <div class="text-center">
                    <p>¿Aún no estás registrado? <a href="{{ path('fos_user_registration_register') }}">Regístrate</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
</div>